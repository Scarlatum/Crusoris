{
  "compilerOptions": {

    "target": "ES2020",
    "module": "ES2015",
    "lib": ["ESNext", "DOM", "ES2020"],
    "moduleResolution": "classic",
    
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "useDefineForClassFields": true,
    
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": true,
    
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib/types",

    "baseUrl": ".",
    "rootDir": "source",
    "paths": {
      "~/*": ["source/*"]
    }
  },
  "include": [
    "source"
  ],
  "exclude": [
    "index.ts"
  ]
}
